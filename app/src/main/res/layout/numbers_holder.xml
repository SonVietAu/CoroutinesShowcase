<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numbersHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/numbersChb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/numbersHolder"
        app:layout_constraintTop_toTopOf="@id/numbersHolder"
        app:layout_constraintEnd_toStartOf="@id/refreshBtn"/>

    <ImageButton
        android:id="@+id/refreshBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_next"
        app:layout_constraintTop_toTopOf="@id/numbersHolder"
        app:layout_constraintEnd_toStartOf="@id/deleteBtn" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toTopOf="@id/numbersHolder"
        app:layout_constraintEnd_toEndOf="@id/numbersHolder"/>

</androidx.constraintlayout.widget.ConstraintLayout>